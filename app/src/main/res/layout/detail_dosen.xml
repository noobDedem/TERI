<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.fantasticfive.teri.mahasiswa.activities.DetailDosenActivity"
    tools:showIn="@layout/activity_detail">

    <TextView
        android:id="@+id/nama_dosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:text="DAFTAR DOSEN"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:paddingTop="10dp"
                android:text="NIP"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="Alamat"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:paddingTop="8dp"
                android:text="Telepon"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:text="Email"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nip_dosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="8dp"
                android:paddingTop="10dp"
                android:textColor="@color/album_title"
                android:text="DAFTAR DOSEN"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/alamat_dosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/album_title"
                android:text="DAFTAR DOSEN"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tel_dosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/album_title"
                android:text="DAFTAR DOSEN"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/email_dosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/album_title"
                android:text="DAFTAR DOSEN"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

</LinearLayout>